<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <bean id="someService" class="test.performance.service.impl.WorkServiceImpl"/>

    <dubbo:application name="dubbo-test" version="0.0.1" default="true" owner="nicee"
                       logger="log4j" registry="local-registry"/>

    <!-- 指定group将在zookeeper中创建根目录，未指定则在dubbo目录下 -->
    <!-- 如果只选protocol的值，则不需要在address中添加协议前缀，如zookeeper:// -->
    <!-- zookeeper -->
    <dubbo:registry id="local-registry" protocol="zookeeper" address="127.0.0.1:2181" check="true" client="zkclient"/>
    <!--<dubbo:registry id="local-registry" protocol="redis" address="127.0.0.1:6379" check="true"/>-->

    <dubbo:protocol name="dubbo" host="127.0.0.1" port="21056" server="netty" serialization="hessian2"/>

    <dubbo:provider accesslog="true" host="127.0.0.1" port="9998" group="local-dubbo" version="0.0.1"/>

    <dubbo:service id="workService" interface="test.performance.service.IWorkService" ref="someService"/>


</beans>